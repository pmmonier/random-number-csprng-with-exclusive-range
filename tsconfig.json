{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es6",
    "sourceMap": true,
    "removeComments": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "lib": [
      "esnext",
      "dom"
    ],
    "typeRoots": [
      "node_modules/@types"
    ]
  },

  "exclude": [
    "node_modules",
    "typings",
    "typings/globals",
    "typings/index.d.ts"
  ]
}